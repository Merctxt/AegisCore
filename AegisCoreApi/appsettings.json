{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "Database": {
    "Host": "your-database-host-here",
    "Port": 5432,
    "Name": "postgres",
    "Username": "postgres",
    "Password": "your-database-password-here"
  },
  
  "Jwt": {
    "Secret": "AegisCore-Super-Secret-Key-For-JWT-Token-2025!",
    "Issuer": "AegisCore",
    "Audience": "AegisCoreUsers",
    "ExpiresInDays": 7
  },
  
  "PerspectiveApi": {
    "ApiKey": "your-perspective-api-key-here"
  },
  
  "Moderation": {
    "ToxicityThreshold": 0.4,
    "SevereToxicityThreshold": 0.8
  },
  
  "Urls": {
    "Api": "http://localhost:5050",
    "Frontend": "http://localhost:5100"
  },
  
  "Cors": {
    "Origins": "http://localhost:5100,https://localhost:5101"
  },
  
  "RateLimiting": {
    "Enabled": true,
    "DefaultLimitPerDay": 100
  }
}
