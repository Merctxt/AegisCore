# AegisCore SaaS - Environment Variables
# Copy this file to .env and fill in your values

# ========================================
# DATABASE (PostgreSQL)
# ========================================
DATABASE_URL=postgresql://username:password@host:port/database

# ========================================
# JWT Authentication
# ========================================
JWT_SECRET=your-super-secret-key-min-32-characters-long-change-in-production!

# ========================================
# Google Perspective API
# ========================================
# Get your key at: https://developers.perspectiveapi.com/
PERSPECTIVE_API_KEY=your_perspective_api_key

# ========================================
# Application URLs
# ========================================
API_URL=http://localhost:5050
FRONTEND_URL=http://localhost:5100

# ========================================
# Moderation Settings
# ========================================
TOXICITY_THRESHOLD=0.7
SEVERE_TOXICITY_THRESHOLD=0.9
