<!-- CTA -->
<section class="bg-primary text-white py-5">
    <div class="container text-center py-5">
        <h2 class="fw-bold mb-3">Pronto para começar?</h2>
        <p class="lead mb-4">Crie sua conta gratuita e comece a moderar conteúdo agora.</p>
        <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg">
            <i class="bi bi-rocket-takeoff me-2"></i>Criar Conta Grátis
        </a>
    </div>
</section>
