@model AegisCoreWeb.Models.RegisterViewModel
@{
    ViewData["Title"] = "Criar Conta";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="fw-bold">
                            <i class="bi bi-shield-check text-primary me-2"></i>Criar Conta
                        </h2>
                        <p class="text-muted">Comece gratuitamente com 100 requisições/dia</p>
                    </div>
                    
                    <form asp-action="Register" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Nome</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input asp-for="Name" class="form-control" placeholder="Seu nome" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="seu@email.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Senha</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input asp-for="Password" class="form-control" placeholder="Mínimo 8 caracteres" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label">Confirmar Senha</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Repita a senha" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100 py-2">
                            <i class="bi bi-rocket-takeoff me-2"></i>Criar Conta
                        </button>
                    </form>
                    
                    <hr class="my-4">
                    
                    <p class="text-center mb-0">
                        Já tem conta? 
                        <a asp-action="Login" class="text-decoration-none">Entrar</a>
                    </p>
                </div>
            </div>
            
            <div class="text-center mt-4">
                <small class="text-muted">
                    Ao criar uma conta, você concorda com nossos 
                    <a asp-controller="Home" asp-action="Terms">Termos de Serviço</a> e 
                    <a asp-controller="Home" asp-action="Privacy">Política de Privacidade</a>.
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
